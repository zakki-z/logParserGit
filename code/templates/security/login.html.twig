{% block title %}Login - CRM System{% endblock %}

{% block content %}
    <div class="text-center mb-4">
        <i class="bi bi-person-circle fs-1 text-primary"></i>
        <h4 class="fw-semibold mt-2">Sign in to your account</h4>
    </div>

    <form action="{{ path('app_login') }}" method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" id="username" name="username" class="form-control"
                   value="{{ app.session.get('_security.last_username') }}" placeholder="Enter your username" required autofocus>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
        </div>
        <div class="flex items-center justify-between">
            <label class="flex items-center text-sm text-gray-700">
                <input type="checkbox" name="_remember_me" class="mr-2 h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                Remember me
            </label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-primary w-100">Sign in</button>
    </form>
{% endblock %}
